description = "Runtime support for stubs generated by'piqic-ocaml'"

package "pb" (
  description = "Piqi runtime library for Protocol Buffers serialization"
  archive(byte) = "piqirun.cmo"
  archive(native) = "piqirun.cmx"
  requires = "bytes stdlib-shims"
)

package "ext" (
  description = "Piqi runtime library for multi-format JSON/XML/Protobuf/Piq serialization"
  requires = "piqilib piqirun.pb"
  archive(byte) = "piqirun_ext.cmo"
  archive(native) = "piqirun_ext.cmx"
)
